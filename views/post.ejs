<%- include('partials/_header') -%>
<body>
<%- include('partials/_navigation') -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <span class="meta">Posted by
              <a href="#">Enes05</a>
              on <%=post.dateCreated.getUTCDay() %>.<%= post.dateCreated.getUTCMonth() %>.<%= post.dateCreated.getUTCFullYear() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <%= post.detail %>
        </div>
      </div>
    </div>
  </article>

  <hr>

 <%- include('partials/_footer') -%>

</body>
