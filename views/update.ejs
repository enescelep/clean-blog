<%- include('partials/_header') -%>
<body>
<%- include('partials/_navigation') -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/contact-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="page-heading">
            <h1>Update Post</h1>

          </div>
        </div>
      </div>
    </div>
  </header>
  <!-- Post -->
  <div class="card text-center mx-auto" style="width: 50rem;">
    <div class="card-header">
      Post Details
    </div>
    <img src='<%= post.image %>' class='card-img-top' height='400'>
    <span class='caption text-muted'>
            <%= post.caption %>
    </span>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text">
        <%= post.detail %>
      </p>
    </div>
    <div class='card-footer'>
      <a href="#update" class="btn btn-primary">Update Post</a>
    </div>
  </div>
  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto" id="update">
        <form method="POST" action="/posts/<%= post._id %>?_method=PUT" class="control-group" encType="multipart/form-data">
            <div class="form-group floating-label-form-group controls">
              <label>Post Title</label>
              <input type="text" name="title" class="form-control" placeholder="Post Title" >
              <p class="help-block text-danger"></p>
            </div>
          <div class="control-group">
            <div class="form-group floating-label-form-group controls">
              <label>Post Description</label>
              <textarea rows="5" name="detail" class="form-control" placeholder="Post Description" ></textarea>
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div class="form-group floating-label-form-group controls">
            <label>Add Photo</label>
            <input type="file" name="image" class="form-control">
            <p class="help-block text-danger"></p>
          </div>
          <div class="form-group floating-label-form-group controls">
            <label>Photo Caption</label>
            <input type="text" name="caption" class="form-control" placeholder="Photo's Caption">
            <p class="help-block text-danger"></p>
          </div>
          <br>
          <div id="success"></div>
          <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
        </form>
      </div>
    </div>
  </div>

  <hr>
<%- include('partials/_footer') -%>
</body>